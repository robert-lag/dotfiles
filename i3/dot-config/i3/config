# ----------------------------------------------------------------------------
# variables
# ----------------------------------------------------------------------------

# general
set $mod Mod4
set $term urxvt

# gaps
set $outer-gaps 6
set $inner-gaps 6

# screenshot
set $scrnshot-name '%Y-%m-%d-%H%M%S-$wx$h-scrot.png'
set $scrnshot-directory '~/Pictures/screenshots/'

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# colors
#set $bg-color			#2f343f
#set $inactive-bg-color		#2f343f
#set $text-color			#f3f4f5
#set $inactive-text-color	#676E7D
#set $urgent-bg-color		#E53935
#set $indicator-color		#147dad
#set $window-background-color	#cccccc

#set $bg-color			#454545
set_from_resource $bg-color				i3wm.background		#2f343f
set_from_resource $inactive-bg-color			i3wm.background		#2f343f
set_from_resource $text-color				i3wm.foreground		#f3f4f5
set_from_resource $inactive-text-color			i3wm.foreground		#676E7D
set_from_resource $urgent-bg-color			i3wm.color1		#E53935
set_from_resource $indicator-color			i3wm.color4		#147dad
set_from_resource $window-bg-color			i3wm.background		#cccccc

# ----------------------------------------------------------------------------
# general settings
# ----------------------------------------------------------------------------

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

font pango:Ubuntu 12
#font pango:DejaVu Sans Mono 10

# border
default_border pixel 3
default_floating_border normal
#smart_borders on
#hide_edge_borders smart_no_gaps
hide_edge_borders both

# gaps
gaps outer $outer-gaps
gaps inner $inner-gaps
#smart_gaps inverse_outer
smart_gaps on

force_display_urgency_hint 500 ms

# ----------------------------------------------------------------------------
# key bindings
# ----------------------------------------------------------------------------

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# lock screen
#bindsym $mod+Shift+x exec i3lock --color "$bg-color"
bindsym $mod+Shift+x exec betterlockscreen -l

# start a term
bindsym $mod+Return exec $term

# start rofi (a program launcher)
bindsym $mod+d exec rofi -modi drun#run -show drun

bindsym $mod+u [instance="dropdown-general"] scratchpad show, move position center
bindsym $mod+z [instance="dropdown-math"] scratchpad show, move position center

# toggle gaps
bindsym $mod+g gaps outer current toggle $outer-gaps; gaps inner current toggle $inner-gaps
bindsym $mod+Shift+g gaps outer all toggle $outer-gaps; gaps inner all toggle $inner-gaps

# kill focused window
bindsym $mod+q kill

# kill picom (to fix screen freeze)
bindsym $mod+p exec killall picom

# toggle split in vertical / horizontal orientation
bindsym $mod+v split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# focus the parent / child container
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

# flash focused window
bindsym Super_L --release exec --no-startup-id flash_window
bindsym Super_R --release exec --no-startup-id flash_window

# screenshot
bindsym $mod+Print --release \
	exec --no-startup-id "scrot $scrnshot-name -e 'mv $f $scrnshot-directory'", \
	exec "notify-send -u normal -t 2000 'Screenshot taken' 'Saved in $scrnshot-directory'
bindsym $mod+Shift+Print --release \
	exec --no-startup-id "scrot --select --freeze $scrnshot-name -e 'mv $f $scrnshot-directory'", \
	exec "notify-send -u normal -t 2000 'Screenshot taken' 'Saved in $scrnshot-directory'

# ----- special keys ----- #
# ------------------------ #

# adjust volume in PulseAudio
set $refresh_i3status killall -SIGUSR1 i3status
#bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && \
#	pactl set-sink-mute @DEFAULT_SINK@ 0 && \
#	$refresh_i3status; \
#	exec --no-startup-id notify-send "Message"
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && \
	pactl set-sink-mute @DEFAULT_SINK@ 0 && \
	$refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && \
	pactl set-sink-mute @DEFAULT_SINK@ 0 && \
	$refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && \
	$refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && \
	$refresh_i3status
#bindsym --release XF86AudioRaiseVolume exec amixer -q set Master 5%+ unmute
#bindsym --release XF86AudioLowerVolume exec amixer -q set Master 5%- unmute
#bindsym --release XF86AudioMute exec amixer -q set Master toggle

# sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# media player controls
# on some pcs the play button is used to toggle 
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# ----- window navigation ----- #
# ----------------------------- #

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

