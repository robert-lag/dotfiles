bindcode $mod+Mod2+Shift+81 move container to workspace number $ws9
bindcode $mod+Mod2+Shift+90 move container to workspace number $ws10

# move focused workspace between monitors
bindsym $mod+Ctrl+greater move workspace to output right
bindsym $mod+Ctrl+less move workspace to output left

# ----- modes ----- #
# ----------------- #

# Set shut down, restart and locking features
bindsym $mod+Shift+q mode "$mode_system"
set $mode_system (l)ock, (e)xit_session, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id betterlockscreen -l, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+o mode "$mode_launcher"
set $mode_launcher Launch: (f)irefox (t)hunderbird (r)anger (v)scodium (s)potify 
mode "$mode_launcher" {
    bindsym f exec firefox, mode "default"
    bindsym t exec thunderbird, mode "default"
    bindsym r exec --no-startup-id urxvt -e ranger, mode "default"
    bindsym v exec --no-startup-id vscodium, mode "default"
    bindsym s exec --no-startup-id spotify, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# resize window (you can also use the mouse for that)
set $mode_resize Resize
bindsym $mod+r mode "$mode_resize"
mode "$mode_resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+b exec "notify-send -u low -t 3000 'This is a very low priority message that is very important \
maybe even too important.' 'And this is the detailed description!\nVery detailed. Very Very Very Very Very Very!!!!!'"
#bindsym $mod+n exec "notify-send -u normal -t 3000 'This is a normal message that is very important \
#maybe even too important.' 'And this is the detailed description!\nVery detailed'"
bindsym $mod+m exec "notify-send -u critical -t 3000 'This is a very important warning that is very important \
maybe even too important.' 'And this is the detailed description!\nVery detailed'"

